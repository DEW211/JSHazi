<% include header %>
<div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <h2>Bolt</h2>
                <form method="POST">
                    <div class="form-group">
                        <label for="InputNewStoreAddr">Cím</label>
                        <input type="text" class="form-control" id="inputAddr" placeholder="cím" name="address"
                        value="<%= (typeof bolt === 'undefined') ? '' : bolt.address %>">
                    </div>
                    <div class="form-group">
                            <label for="InputNewOpen">Nyitvatartása</label>
                            <input type="text" class="form-control" id="inputOpen" placeholder="nyitvatartás" name="open"
                            value="<%= (typeof bolt === 'undefined') ? '' : bolt.open %>">
                        </div>
                        <hr class="mb-4">
                        <input type="submit" class="btn btn-primary btn-lg active" value="Mentés"/>
                        <a href="/store/view" class="btn btn-danger btn-lg active" role="button">Mégse</a>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
<% include footer %>